.index-page
  header
    absolute($top:0,$left:0,$right:0)
    z-index: 3
    background-color: transparent

header
  background-color: #000000
.header-top

  .container
    display: flex
    align-items flex-end
    border-bottom: 1px solid rgba(#000, .13)
    margin-bottom: 20px
.header-logo
  margin-right: 60px

.header-nav
  display: flex
  justify-content space-between
  align-items flex-end
  flex 1
  padding-bottom: 30px

.header-nav__item
  margin-bottom: 10px
  &:last-child
    margin-bottom: 0
  .icon
    fill #ef4113
    size(17px)
    margin-right: 10px

.header-nav__link
  color: #ef4113
  font-size: rem(15)
  border-bottom: 1px solid #ccc
  &.header__phone
    font-size: rem(20)
    border-bottom: 0
  &.header-nav__link--user
    display: block

.header-nav__user
  display: flex
  .icon
    fill #ef4113
    size(30px)
    margin-bottom: 15px

.header-nav__user-item
  text-align: center
  margin-left: 25px
  &:first-child
    margin-left: 45px

.header-nav__user-icon
  position: relative
  display: inline-block

.header-nav__user-count
  absolute($top:-10px,$right:-5px)
  background-color: redColor
  color: #fff;
  font-size: rem(12)
  display: block
  size (22px)
  padding-top: 4px
  border-radius: 50%

.icon-logo
  fill #ef4113
  size(240px,130px)

