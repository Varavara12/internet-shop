mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="static/img/svg/symbol/sprite.svg#" + name)



mixin socialLink(link, icon)
	li.social-list__item
		a(href= link).social-list__link
			+icon(icon)


mixin paymentType(icon)
	li.payment-type__item
		+icon(icon)

mixin footerNavLink(title)
	li.footer-nav__item
		a(href="javascript:void(0);").footer-nav__link= title